{{#if userLogin}}
<div class="container w-50 p-4 mt-2 mb-2 bg-secondary d-flex justify-content-between align-items-center">
        <h4 class="text-light font-monospace">Bienvenido {{userLogin}}</h4>
        <button class="btn btn-warning"><a class="text-decoration-none text-dark" href="/api/auth/logout">Logout</a></button>
</div>
{{/if}}
{{#if userLogout}}
<div class="container w-50 p-4 mt-2 bg-secondary d-flex justify-content-between align-items-center">
        <h4 class="text-center text-light">Vuelve pronto! Hasta luego {{userLogout}}</h4>
</div>
{{/if}}