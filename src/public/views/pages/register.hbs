<div class="container w-50 mt-2 p-4 align-items-center">
    {{#if error_message}}
        <div class="text-center mb-3 bg-danger rounded container">
            <h4 class="text-light font-monospace p-2">{{error_message}}</h4>
        </div>
    {{/if}}
    <h3 class="mb-3 text-white text-center font-monospace">Registrate</h3>
    <div class="d-flex flex-column align-items-center">
        <div>
            <form action="/api/auth/register" enctype="multipart/form-data" method="POST" >
                <div class="form-floating mb-3">
                    <input type="name" name="name" class="form-control" id="floatingInput" placeholder="Ingresa tu nombre" required> 
                    <label for="floatingInput">Ingresa tu nombre</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="address" name="address" class="form-control" id="floatingInput" placeholder="Ingresa tu direccion" required> 
                    <label for="floatingInput">Ingresa tu direccion</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="age" name="age" class="form-control" id="floatingInput" placeholder="Ingresa tu edad" required> 
                    <label for="floatingInput">Ingresa tu edad</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="phone" name="phone" class="form-control" id="floatingInput" placeholder="Ej: +541128282828" required> 
                    <label for="floatingInput">Ej: +541128282828</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="file" name="file" class="form-control" id="floatingInput" placeholder="Elegi tu foto" required> 
                    <label for="floatingInput">Elegi tu foto</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" name="username" class="form-control" id="floatingInput" placeholder="Ingresa tu email" required>
                    <label for="floatingInput">Ingresa tu email</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Ingresa una contraseña" required>
                    <label for="floatingPassword">Ingresa una contraseña</label>
                </div>
                <button type="submit" class="btn btn-warning mt-3 container">Registrarme</button>
            </form>
        </div>
        <div class="mt-3">
                <p class="font-monospace"><a class="text-light text-decoration-none" href="/api/auth/login">¿Ya tienes cuenta? Ingresa AQUI</a></p>
            </div>
    </div>
</div>