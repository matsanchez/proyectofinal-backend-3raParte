<h1 class="mt-2 text-center pt-4 text-light font-monospace">Inicio Sesion</h1>
<hr />
<div class="container w-50 mt-2 p-4 align-items-center">
    {{#if error_message}}
        <div class="text-center mb-3 bg-danger rounded container">
            <h4 class="text-light font-monospace p-2">{{error_message}}</h4>
        </div>
    {{/if}}
    {{#if success_message}}
        <div class="text-center mb-3 bg-success rounded container">
            <h4 class="text-light font-monospace p-2">{{success_message}}</h4>
        </div>
    {{/if}}
    <h3 class="mb-3 text-white text-center font-monospace">Login</h3>
    <div class="d-flex flex-column align-items-center">
        <div>
            <form action="/api/auth/login" method="POST" >
                <div class="form-floating mb-3">
                    <input type="email" name="username" class="form-control" id="floatingInput" placeholder="Ingresa tu email" required>
                    <label for="floatingInput">Ingresa tu email</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Ingresa una contraseña" required>
                    <label for="floatingPassword">Ingresa una contraseña</label>
                </div>
                <button type="submit" class="btn btn-warning mt-3 container">Ingresar</button>
            </form>
        </div>
            <div class="mt-3">
                <p class="font-monospace"><a class="text-light text-decoration-none" href="/api/auth/register">¿Eres Nuevo? Registrate AQUI</a></p>
            </div>
    </div>
</div>